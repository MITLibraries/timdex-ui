<%
# Conditional input label depends on whether a search has already happened.
label = "Search the MIT Libraries"
button = "Search"

if params[:q]
  label = "You searched for"
end
%>

<form id="basic-search" class="form-horizontal basic-search" action="/results" method="get">
  <div class="form-group">
    <label for="basic-search-main" class="field-label"><%= label %></label>
      <input id="basic-search-main" type="search" class="field field-text basic-search-input required" name="q" placeholder="Enter your search" value="<%= params[:q] %>" required="required" aria-required="true">
    <div class="basic-search-submit">
      <button type="submit" class="btn button-primary"><%= button %></button>
    </div>
  </div>
</form>

<p><%= link_to("Advanced search", advanced_search_path) %>
