<% return unless @json.present? %>

<div id="doi-fact" class="panel fact">
  <% unless params[:slim].present? %>
    <div class="panel-heading">
      <%= @json[:title] %> <br />
    </div>
  <% end %>

  <div class="panel-body">
    <%= t('.in') %> <%= @json[:journal_name] %>, <%= @json[:year] %>

    <ul>
      <li>
        <%= t('.open_access') %>
        <% if @json[:oa] %>
          <%= @json[:oa_status] %>
        <% else %>
          <%= t('.unknown_oa') %>
        <% end %>
      </li>
      <li><%= t('.publisher') %> <%= @json[:publisher] %></li>

      <% if @json[:oa] %>
        <li><%= link_to(t('.oa_link'), @json[:best_oa_location]["url"]) %>
      <% end %>

      <li><%= link_to(t('.check_mit_access'), @json[:link_resolver_url]) %>
    </ul>
  </div>
</div>
