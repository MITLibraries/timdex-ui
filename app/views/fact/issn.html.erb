<% return unless @json.present? %>

<div id="issn-fact" class="panel panel-info fact">
  <div class="panel-heading">
    <%= link_to @json[:title], @json[:openurl] %>
  </div>

  <div class="panel-body">
    <p><%= t('.publisher') %> <%= @json[:publisher] %></p>
  </div>

  <div class="panel-footer">
    <span><%= t('.is_relevant') %> </span>
    <a href="#"><%= t('.yes') %></a> | <a href="#"><%= t('.no') %></a>
  </div>
</div>
