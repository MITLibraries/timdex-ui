<% return unless @json.present? %>

<div id="pmid-fact" class="panel panel-info fact">
  <div class="panel-heading">
    <%= @json[:article_title] %>
  </div>

  <div class="panel-body">
    <ul>
      <li><%= t('.journal') %> <%= @json[:journal_title] %></li>
      <li><%= t('.volume') %> <%= @json[:journal_volume] %></li>
      <li><%= t('.year') %> <%= @json[:journal_year] %></li>
      <li><%= t('.pages') %> <%= @json[:pages] %></li>
      <li><%= t('.pub_status') %> <%= @json[:status] %></li>
    </ul>
  </div>

  <div class="panel-footer">
    <span><%= t('.is_relevant') %> </span>
    <a href="#"><%= t('.yes') %></a> | <a href="#"><%= t('.no') %></a>
  </div>
</div>
